# Development Dockerfile for CoreUI React application
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy only package.json to ensure fresh dependency resolution
COPY package.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port 80 for dev server
EXPOSE 80

# Start Vite dev server binding to 0.0.0.0:80
CMD ["npm", "start", "--", "--host", "0.0.0.0", "--port", "80"]